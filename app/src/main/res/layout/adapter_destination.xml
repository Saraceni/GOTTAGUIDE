<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/adapter_destination_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Festival de bacon"
        android:padding="5dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/adapter_destination_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:text="Salt Lake City"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/adapter_destination_name" />

    <TextView
        android:id="@+id/adapter_destination_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:text="NY"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/adapter_destination_name"
        android:layout_toRightOf="@id/adapter_destination_city"/>

    <TextView
        android:id="@+id/adapter_destination_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:text="USA"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/adapter_destination_name"
        android:layout_toRightOf="@id/adapter_destination_state"/>

</RelativeLayout>